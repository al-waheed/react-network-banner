{
  "name": "react-network-banner",
  "version": "1.0.1",
  "description": "A lightweight React component and hook to monitor network connectivity and display a banner UI when your app goes offline, has poor network, or comes back online.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --dts --format esm,cjs --inject-style",
    "dev": "tsup src/index.tsx --dts --format esm,cjs --watch --inject-style",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "react",
    "offline",
    "banner",
    "offline-banner",
    "react-component",
    "typescript"
  ],
  "author": "Morenikeji Ajisegiri",
  "license": "ISC",
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@types/css-modules": "^1.0.5",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
